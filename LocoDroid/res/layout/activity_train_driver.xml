<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hu.denes.locodroid.TrainDriverActivity" >


    <ToggleButton
        android:id="@+id/lightToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/speedSeekBar"
        android:layout_alignTop="@+id/locoNameEditText"
        android:text="Lights" />

    <SeekBar
        android:id="@+id/speedSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lightToggleButton" />

    <TextView
        android:id="@+id/otherLocoAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/speedSeekBar"
        android:layout_below="@+id/speedSeekBar"
        android:layout_marginTop="32dp"
        android:text="Other loco address" />

    <EditText
        android:id="@+id/otherLocoAddressEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/otherLocoAddressTextView"
        android:layout_alignBottom="@+id/otherLocoAddressTextView"
        android:layout_toRightOf="@+id/otherLocoAddressTextView"
        android:ems="4"
        android:inputType="number" />

    <Button
        android:id="@+id/addRemoteLocoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/otherLocoAddressTextView"
        android:layout_below="@+id/otherLocoAddressEditText"
        android:text="Add" />

    <Button
        android:id="@+id/removeRemoteLocoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otherLocoAddressEditText"
        android:layout_centerHorizontal="true"
        android:text="Remove" />

    <TextView
        android:id="@+id/locoAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Switch
        android:id="@+id/directionSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="Forward" />

</RelativeLayout>
